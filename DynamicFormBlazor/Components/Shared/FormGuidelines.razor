@using Microsoft.AspNetCore.Components

<MudCard Elevation="2" Class="mb-4">
    <MudCardContent>
        <MudText Typo="Typo.h6" GutterBottom="true" Class="d-flex align-items-center">
            <MudIcon Icon="@Icons.Material.Filled.Info" Class="me-2 text-primary" />
            @Title
        </MudText>
        <MudList T="string" Dense="true">
            @foreach (var guideline in Guidelines)
            {
                <MudListItem T="string" Icon="@guideline.Icon" IconColor="@guideline.Color">
                    <MudText Typo="Typo.body2">@guideline.Text</MudText>
                </MudListItem>
            }
        </MudList>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public string Title { get; set; } = "Form Guidelines";
    [Parameter] public List<GuidelineItem> Guidelines { get; set; } = new();
    
    public class GuidelineItem
    {
        public string Icon { get; set; } = Icons.Material.Filled.CheckCircle;
        public Color Color { get; set; } = Color.Primary;
        public string Text { get; set; } = "";
    }
}