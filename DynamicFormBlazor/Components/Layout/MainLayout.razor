@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Dynamic Form Blazor</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Href="/" />
        <MudIconButton Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Inherit" Href="/validation" />
        <MudIconButton Icon="@Icons.Material.Filled.AutoAwesome" Color="Color.Inherit" Href="/improved" />
        <MudIconButton Icon="@Icons.Material.Filled.AutoFixHigh" Color="Color.Inherit" Href="/simplified" />
    </MudAppBar>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6" MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

