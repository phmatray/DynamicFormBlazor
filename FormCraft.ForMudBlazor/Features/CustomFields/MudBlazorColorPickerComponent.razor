@namespace FormCraft.ForMudBlazor
@typeparam TModel
@inherits FieldComponentBase<TModel, string>

<MudColorPicker
    Label="@Label"
    @bind-Text="@CurrentValue"
    Placeholder="@Placeholder"
    HelperText="@HelpText"
    ReadOnly="@IsReadOnly"
    Disabled="@IsDisabled"
    Required="@IsRequired"
    Variant="Variant.Outlined"
    Margin="Margin.Dense"
    ColorPickerMode="ColorPickerMode.RGB"
/>