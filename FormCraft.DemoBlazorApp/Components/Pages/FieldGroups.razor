@page "/field-groups"
@inject FormCodeGeneratorService CodeGenerator

<DemoPageLayout
    Title="Field Groups Layout"
    Icon="@Icons.Material.Filled.GridView"
    Description="This demonstrates organizing form fields into rows with different column layouts."
    FormDemoIcon="@Icons.Material.Filled.ViewQuilt">
    <FormDemoContent>
        <FormDemoSection
            TModel="EmployeeModel"
            Model="@_model"
            Configuration="@_formConfiguration"
            FormTitle="Employee Information Form"
            FormIcon="@Icons.Material.Filled.Badge"
            IsSubmitted="@_isSubmitted"
            OnValidSubmit="@HandleValidSubmit"
            OnReset="@ResetForm"
            DataDisplayItems="@GetDataDisplayItems()"
            ShowSubmitButton="true"
            SubmitButtonText="Save Employee"
            IsSubmitting="@_isSubmitting"
            SubmittingText="Saving...">
            <SidebarContent>
                <FormGuidelines Guidelines="@_sidebarFeatures" Title="Layout Features" />
                        
                <MudCard Elevation="2" Class="mt-4">
                    <MudCardContent>
                        <MudText Typo="Typo.h6" GutterBottom="true" Class="d-flex align-items-center">
                            <MudIcon Icon="@Icons.Material.Filled.Info" Class="me-2 text-info" />
                            Layout Information
                        </MudText>
                        <MudList T="string" Dense="true">
                            <MudListItem T="string" Icon="@Icons.Material.Filled.TableRows" IconColor="Color.Primary">
                                <MudText Typo="Typo.body2">Row 1: 2 fields (50% each)</MudText>
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.ViewColumn" IconColor="Color.Secondary">
                                <MudText Typo="Typo.body2">Row 2: 3 fields (33.3% each)</MudText>
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.ViewStream" IconColor="Color.Tertiary">
                                <MudText Typo="Typo.body2">Row 3: 1 field (100% width)</MudText>
                            </MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </SidebarContent>
        </FormDemoSection>
    </FormDemoContent>
    
    <CodeExampleContent>
        <CodeExample
            Title="Field Groups Configuration"
            Code="@GetGeneratedCode()"
            Language="csharp" />
    </CodeExampleContent>
    
    <GuidelinesContent>
        <ApiGuidelinesTable
            Title="Field Groups Guidelines"
            Items="@_apiGuidelineTableItems" />
    </GuidelinesContent>
</DemoPageLayout>